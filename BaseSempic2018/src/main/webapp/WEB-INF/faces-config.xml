<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    
        <render-kit>  
        <renderer>  
            <component-family>javax.faces.Input</component-family>  
            <renderer-type>javax.faces.File</renderer-type>  
            <renderer-class>fr.uga.miashs.sempic.util.MultipleFileRenderer</renderer-class>  
        </renderer>  
    </render-kit> 
    
    <navigation-rule>
        <navigation-case>
            <from-outcome>create-user</from-outcome>
            <to-view-id>/public/create-user.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <navigation-case>
            <from-outcome>logout</from-outcome>
            <to-view-id>/goodbye.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <navigation-case>
            <from-outcome>home</from-outcome>
            <to-view-id>/user/home.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-action>#{createUser.create}</from-action>
        <navigation-case>
            <if>#{sessionTools.isAdmin()}</if>
            <from-outcome>success</from-outcome>
            <to-view-id>/admin/list-users.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <if>#{sessionTools.isNotLogged()}</if>
            <from-outcome>success</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>failure</from-outcome>
            <to-view-id>/public/create-user.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/user/create-album.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/user/view-album.xhtml</to-view-id>
            <redirect include-view-params="true">
                <redirect-param>
                    <name>albumId</name>
                    <value>#{createAlbum.current.id}</value>
                </redirect-param>
            </redirect>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/user/view-album.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>suppAlbumSuccess</from-outcome>
            <to-view-id>/user/home.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
     <navigation-rule>
        <from-view-id>/user/edit-account.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/user/view-account.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/user/add-semantic.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/user/add-semantic.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/user/view-photo.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>failure</from-outcome>
            <to-view-id>/user/view-photo.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/user/view-photo.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/user/search.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/user/search.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>failure</from-outcome>
            <to-view-id>/user/search.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
